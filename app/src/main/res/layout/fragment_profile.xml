<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="40sp"
        android:textStyle="italic"
        android:textColor="@color/Forest_Green"
        android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details: "
        android:textColor="@color/Parsley"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cut down trees "
        android:layout_marginTop="480dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="480dp"
        android:text="Number of trees "
        android:textColor="@color/Forest_Green" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Planted trees "
    android:layout_marginTop="440dp"
        android:textSize="20sp"
    android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total  "
        android:layout_marginTop="440dp"
        android:textColor="@color/Forest_Green"
        android:layout_marginLeft="280dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/smaller_tree"
        android:contentDescription="TODO" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trees remainig "
        android:layout_marginTop="520dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="520dp"
        android:text="Number of trees "
        android:textColor="@color/Forest_Green" />
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@drawable/left"
        tools:ignore="RtlHardcoded"
        android:contentDescription="TODO" />


</FrameLayout>