<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    android:label="home_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.treeplantingapp.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/addTreeFragment"
        android:name="com.example.treeplantingapp.AddTreeFragment"
        android:label="Add a tree"
        tools:layout="@layout/fragment_add_tree"/>
    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.treeplantingapp.ContactFragment"
        android:label="Contact Us"
        tools:layout="@layout/fragment_contact" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.treeplantingapp.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/logoutFragment"
        android:name="com.example.treeplantingapp.LogoutFragment"
        android:label="Log Out"
        tools:layout="@layout/fragment_logout" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.treeplantingapp.AboutFragment"
        android:label="About Us"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/recommendationFragment"
        android:name="com.example.treeplantingapp.RecommendationFragment"
        android:label="Trees recommendation"
        tools:layout="@layout/fragment_recommendation" />
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.treeplantingapp.ListFragment"
        android:label="Planted Trees"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addTreeFragment"
            app:destination="@id/addTreeFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.treeplantingapp.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>