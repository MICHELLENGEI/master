        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="520dp"/>

    <Button
        android:id="@+id/addTree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
