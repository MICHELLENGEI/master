<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addTreeFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTreeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/peopleplantingtree"
        android:contentDescription="TODO" />

    <EditText
        android:id="@+id/editTextTreeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of tree"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="400dp"/>
    <EditText
        android:id="@+id/editTextTreeLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location of tree"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="460dp"/>
    <EditText
        android:id="@+id/editTextNumber0fTrees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of trees"
